import Header from "../components/Header.astro";
import Welcome from "../components/Welcome.astro";
import Footer from "../components/Footer.astro";
import '@fontsource/zen-kaku-gothic-new/400.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/prompt.svg" />
		<meta name="generator" content={Astro.generator} />
		<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
		<title>Portafolio Javier Nieves, Desarrollador y Programador Full stack</title>
	</head>
	<body>
		<Header />
		<Welcome />
		<slot />
		<div class="fixed top-0 z-[-2] h-full w-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
		
	<Footer />
	</body>
</html>

<style is:global>
	:root{
		color-scheme: light dark;
	}
	html{
		font-family: 'Zen Kaku Gothic New',system-ui, sans-serif;
	}
	body{
		background-color: black;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
header {
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
}

	
	
</style>


